<!-- app/views/shipments/show.html.erb -->
<div class="container">
  <h1>Shipment Details</h1>
  <dl class="row">
    <dt class="col-sm-3">Source Location:</dt>
    <dd class="col-sm-9"><%= @shipment.source_location %></dd>

    <dt class="col-sm-3">Target Location:</dt>
    <dd class="col-sm-9"><%= @shipment.target_location %></dd>

    <dt class="col-sm-3">Item:</dt>
    <dd class="col-sm-9"><%= @shipment.item %></dd>

    <dt class="col-sm-3">Status:</dt>
    <dd class="col-sm-9"><%= @shipment.status %></dd>
  </dl>
  <%= link_to "Edit", edit_shipment_path(@shipment), class: "btn btn-primary" %>
  <%= link_to "Back", shipments_path, class: "btn btn-secondary" %>
</div>
