<!-- app/views/users/index.html.erb -->
<div class="container">
  <% label =  params[:role] == 'delivery_partner' ? "Delivery Partner" : "Users"%>
  <h1><%= label %></h1>
   <%= link_to "New User", new_app_user_path, class: "btn btn-primary mb-3" %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Onboard</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.onboarded %></td>
          <td>
            <%= link_to "Edit", edit_app_user_path(user), class: "btn btn-primary btn-sm" %>

            <%= link_to 'Delete', app_user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            <%= link_to 'OnBoard', onboard_app_users_path(user), data: { turbo_method: :post, turbo_confirm: "Are you sure, you want to onboard?" }, class: "btn btn-success btn-sm" %>
            <%= link_to 'OffBoard', offboard_app_users_path(user), data: { turbo_method: :post, turbo_confirm: "Are you sure, you want to off-board??" }, class: "btn btn-dark btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
