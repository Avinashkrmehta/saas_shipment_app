<!-- app/views/users/show.html.erb -->
<div class="container">
  <h1>User Details</h1>
  <dl class="row">
    <dt class="col-sm-3">Email:</dt>
    <dd class="col-sm-9"><%= @user.email %></dd>

    <dt class="col-sm-3">Role:</dt>
    <dd class="col-sm-9"><%= @user.role %></dd>
  </dl>
  <%= link_to "Edit", edit_app_user_path(@user), class: "btn btn-primary" %>
  <%= link_to "Back", app_users_path, class: "btn btn-secondary" %>
</div>
